<!--      个人头像 用户名 信息 -->
  <RelativeLayout  
        android:id="@+id/controlcenter_relativeLayout1"  
        android:layout_width="fill_parent"  
        android:layout_height="90dp"  
        android:layout_alignParentLeft="true"  
        android:layout_below="@+id/relativeLayout1"  
        android:layout_marginTop="10dp"  
        android:background="#ffffff" 
        android:clickable="true" >  
       

        <ImageView  
            android:id="@+id/userpic"  
            android:layout_width="70dp"  
            android:layout_height="70dp"  
            android:layout_alignParentLeft="true"  
            android:layout_centerVertical="true"  
            android:src="@drawable/cc_testpersonalpic"
            android:layout_marginLeft="10dp"  
        />  
  
            <RelativeLayout
                android:id="@+id/cc_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:layout_toRightOf="@+id/userpic"
                android:paddingBottom="20dp"
                android:paddingTop="20dp" >
  
            <TextView  
                android:id="@+id/txt_controlcenter1"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_alignParentLeft="true"  
                android:layout_alignParentTop="true" 
                android:textSize="20sp" 
                android:text="控制中心"  
                android:textColor="#000" />  
  
            <TextView  
                android:id="@+id/username_controlcenter"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_alignParentBottom="true"  
                android:layout_alignParentLeft="true"  
                android:text="用户名：王老汉" />    
         </RelativeLayout>  

        <ImageView
            android:id="@+id/imageGo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />
  
    </RelativeLayout>  
 <!--      个人头像 用户名 信息 -->
  
   <RelativeLayout
       android:id="@+id/controlcenter_relativeLayout2"
       android:layout_width="fill_parent"
       android:layout_height="150dp"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/controlcenter_relativeLayout1"
       android:layout_marginTop="10dp" >
  
        <RelativeLayout  
            android:id="@+id/controlcenter_mode1"  
            android:layout_width="match_parent"  
            android:layout_height="50dp"  
            android:layout_alignParentLeft="true"  
            android:layout_alignParentTop="true"  
            android:background="#ffffff"  
            android:clickable="true" >  
       <!--                  android:background="@drawable/selector_first"   -->
  
            <ImageView  
                android:id="@+id/imageView_controlcenter_mode1"  
                android:layout_width="30dp"  
                android:layout_height="30dp"  
                android:layout_alignParentLeft="true"  
                android:layout_centerVertical="true" 
                android:layout_marginLeft="20dp"
                android:src="@drawable/cc_pi" 
              />  
  
            <TextView  
                android:id="@+id/txt_controlcenter2"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:layout_marginLeft="20dp"  
                android:layout_toRightOf="@+id/imageView_controlcenter_mode1"  
                android:text="我的数据"  
                android:textColor="#000" />  
  
            <ImageView
                android:id="@+id/imageGo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp" />
  
        </RelativeLayout>  
  
        <RelativeLayout  
            android:id="@+id/controlcenter_mode2"  
            android:layout_width="match_parent"  
            android:layout_height="50dp"  
            android:layout_below="@id/controlcenter_mode1" 
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"  
            android:background="#ffffff"  
            android:clickable="true">  
<!--               android:background="@drawable/selector_body"   -->

            <ImageView
                android:id="@+id/imageView_controlcenter_mode2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"  
                android:layout_centerVertical="true" 
                android:layout_marginLeft="20dp"
                android:src="@drawable/cc_setting" />
  
            <TextView  
                android:id="@+id/txt_controlcenter3"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_centerVertical="true"  
                android:layout_marginLeft="20dp"  
                android:layout_toRightOf="@+id/imageView_controlcenter_mode2"  
                android:text="个人设置"  
                android:textColor="#000" />  
  
            <ImageView  
                android:id="@+id/imageGo2"  
                android:layout_width="wrap_content"  
                android:layout_height="wrap_content"  
                android:layout_alignParentRight="true"  
                android:layout_centerVertical="true"  
                android:layout_marginRight="10dp"  
                 />  
        </RelativeLayout>  
  
 
    </RelativeLayout> 
        

</LinearLayout>
